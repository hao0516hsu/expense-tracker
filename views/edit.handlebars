<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <form action="/expenses/{{record._id}}?_method=PUT" method="post">
        <div class="mb-3 d-flex flex-row align-items-center">

          <h6>*必填欄位</h6>
          <h2 class="m-auto">請修改你的支出</h2>
        </div>

        <div class="mb-3 input-group">
          <label for="name" class="form-label">名稱*：</label>
          <input type="text" class="form-control mx-3" id="name" name="name" value="{{record.name}}" required>
        </div>

        <div class="mb-3 input-group">
          <label for="date" class="form-label">日期*：</label>
          <input type="date" class="form-control mx-3" id="date" name="date" value="{{dashDate}}" required>
          {{!-- value="2023-06-22" --}}
        </div>

        <div class="mb-3 input-group">
          <p>類別*：</p>
          <select class="form-select mx-3" aria-label="Default select example" id="categoryName" name="categoryName" required>
            <option value="">類別</option>
            {{#each categories}}
              {{#if this.isChoosed}}
                <option selected value="{{this.name}}">{{this.name}}</option>
              {{else}}
                <option value="{{this.name}}">{{this.name}}</option>
              {{/if}}
            {{/each}}
          </select>
        </div>

        <div class="mb-4 input-group">
          <label for="amount" class="form-label">金額*：</label>
          <input type="number" class="form-control mx-3" id="amount" name="amount" value="{{record.amount}}" required>
        </div>

        <div class="d-flex flex-row justify-content-center">
          <button type="submit" class="btn btn-outline-primary ">送出</button>
        </div>

      </form>
    </div>
  </div>
</div>