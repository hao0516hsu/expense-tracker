<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <form action="/expenses" method="post">
        <div class="mb-3 d-flex flex-row align-items-center">

          <h6>*必填欄位</h6>
          <h2 class="m-auto">請輸入你的支出</h2>
        </div>

        <div class="mb-3 input-group">
          <label for="itemName" class="form-label">名稱*：</label>
          <input type="text" class="form-control mx-3" id="itemName" name="itemName" required>
        </div>

        <div class="mb-3 input-group">
          <label for="itemDate" class="form-label">日期*：</label>
          <input type="date" class="form-control mx-3" id="itemDate" name="itemDate" required>
        </div>

        <div class="mb-3 input-group">
          <p>類別*：</p>
          <select class="form-select mx-3" aria-label="Default select example">
            <option selected>類別</option>
            <option value="1">One</option>
            <option value="2">Two</option>
            <option value="3">Three</option>
          </select>
        </div>

        <div class="mb-4 input-group">
          <label for="itemPrice" class="form-label">金額*：</label>
          <input type="number" class="form-control mx-3" id="itemPrice" name="itemPrice" required>
        </div>

        <div class="d-flex flex-row justify-content-center">
          <button type="submit" class="btn btn-outline-primary ">新增支出</button>
        </div>

      </form>
    </div>
  </div>
</div>